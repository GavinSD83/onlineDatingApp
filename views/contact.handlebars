<form>
    <div class="mb-3">
        <label for="fullName" class="form-label">Full name:</label>
        <input type="text" class="form-control" id="fullName" aria-describedby="emailHelp">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control" id="email">
        <div id="emailHelp" class="form-text text-muted">We'll never share your email with anyone</div>
    </div>
    <div class="mb-3">
        <label for="message" class="form-label">Message:</label>
        <textarea class="form-control" id="message" placeholder="Enter your message here."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>